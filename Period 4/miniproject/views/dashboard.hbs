<div class="container">
    <div class="row">

        <div class="col-12 site-header text-right"><a href="/logout/">Logout</a></div>

        <div class="col-6">
            <h3>Create blog entry</h3>

            <form action="/blog/" method="post">
                <div class="form-group"><input type="text" name="title" class="form-control" placeholder="Type blog headline..."></div>
                <div class="form-group"><textarea name="content" class="form-control" placeholder="Type blog content..." rows="4"></textarea></div>
                <div class="form-group"><input type="submit" value="Create" class="btn btn-primary btn-block"></div>
            </form>

            <hr>

            <h3>Friends</h3>
            <ul class="friends-list">
            {{#each friends}}
                <li><a href="#">{{firstName}} {{lastName}}</a></li>
            {{/each}}
            </ul>
        </div>

        <div class="col-6">
            <h3>Blog entries</h3>

            {{#each blog}}
                <div class="blogpost-container">
                    <p><strong>{{headline}}</strong><br>{{content}}</p>
                    <div class="text-right">

                        <span>{{like}}</span>

                        <form action="/blog/like" method="get" name="likeForm">
                            <input type="text" name="blog_like" value="{{id}}" hidden>
                            <input type="submit" value="Like" class="btn btn-warning">
                        </form>

                        <form action="/blog/delete" method="get" name="deleteForm">
                            <input type="text" name="blog_id" value="{{id}}" hidden>
                            <input type="submit" value="Delete" class="btn btn-danger">
                        </form>
                    </div>
                </div>
            {{/each}}
        </div>





    </div>
</div>